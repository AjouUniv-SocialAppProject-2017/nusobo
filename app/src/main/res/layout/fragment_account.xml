<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="layout.income">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/account_top_linearLayout"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/account_left_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#00000000"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <TextView
            android:id="@+id/account_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_layout"
            android:text="2017년 10월"
            android:textAlignment="center"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_gravity="center"/>

        <ImageButton
            android:id="@+id/account_right_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            app:srcCompat="@android:drawable/ic_media_ff" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/account_recycleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    />

</LinearLayout>
